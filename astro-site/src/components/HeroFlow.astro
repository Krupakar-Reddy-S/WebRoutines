---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<svg viewBox="0 0 1600 980" role="img" aria-labelledby="hero-title hero-desc" class={className}>
  <title id="hero-title">WebRoutines end-to-end flow animation</title>
  <desc id="hero-desc">Animated sequence: empty tab with Runner Home, starting a routine, tab-group step navigation, focus mode mini-controller, then returning to sidepanel.</desc>
  <defs>
    <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="8" stdDeviation="12" flood-color="#000" flood-opacity="0.35" />
    </filter>
  </defs>

  <style>
    .txt { fill: var(--c-fg); font-family: 'DM Sans', 'Inter', system-ui, sans-serif; }
    .muted { fill: var(--c-fg-muted); }
    .faint { fill: var(--c-fg-faint); }
    .mono { font-family: 'JetBrains Mono', ui-monospace, monospace; }
    .title { font-size: 17px; font-weight: 600; }
    .small { font-size: 13px; }
    .tiny { font-size: 11px; }
    .label { font-size: 12px; text-transform: uppercase; letter-spacing: 0.08em; }

    .panel { fill: var(--c-surface); stroke: var(--c-surface-border); stroke-width: 1; }
    .card { fill: var(--c-surface-raised); stroke: var(--c-surface-border); stroke-width: 1; }
    .chip { fill: var(--c-surface-raised); stroke: var(--c-surface-border); stroke-width: 1; }
    .accent { fill: var(--c-accent); }
    .accentStroke { stroke: var(--c-accent); }

    .stage { opacity: 0; }
    .stage1 { animation: stage1 24s linear infinite; }
    .stage2 { animation: stage2 24s linear infinite; }
    .stage3a { animation: stage3a 24s linear infinite; }
    .stage3b { animation: stage3b 24s linear infinite; }
    .stage3c { animation: stage3c 24s linear infinite; }
    .stage4 { animation: stage4 24s linear infinite; }
    .stage5 { animation: stage5 24s linear infinite; }

    @keyframes stage1 { 0%, 14% { opacity: 1; } 18%, 100% { opacity: 0; } }
    @keyframes stage2 { 14%, 28% { opacity: 1; } 12%, 32%, 100% { opacity: 0; } }
    @keyframes stage3a { 30%, 42% { opacity: 1; } 28%, 46%, 100% { opacity: 0; } }
    @keyframes stage3b { 42%, 54% { opacity: 1; } 40%, 58%, 100% { opacity: 0; } }
    @keyframes stage3c { 54%, 66% { opacity: 1; } 52%, 70%, 100% { opacity: 0; } }
    @keyframes stage4 { 68%, 82% { opacity: 1; } 66%, 86%, 100% { opacity: 0; } }
    @keyframes stage5 { 84%, 100% { opacity: 1; } 0%, 82% { opacity: 0; } }

    .cursorPulse { animation: pulse 1.1s ease-in-out infinite; transform-origin: center; }
    @keyframes pulse {
      0%, 100% { opacity: 0.2; transform: scale(0.85); }
      50% { opacity: 0.65; transform: scale(1.1); }
    }

    .flowDot { animation: moveDot 4.8s ease-in-out infinite; }
    @keyframes moveDot {
      0% { transform: translateX(0px); }
      45% { transform: translateX(210px); }
      100% { transform: translateX(420px); }
    }

    .focusPillPulse { animation: focusPulse 2.4s ease-in-out infinite; }
    @keyframes focusPulse {
      0%, 100% { box-shadow: 0 0 0 0 rgba(82,201,114,0.0); }
      50% { box-shadow: 0 0 0 8px rgba(82,201,114,0.14); }
    }
  </style>

  <rect width="1600" height="980" style="fill:var(--c-base)" />
  <rect x="20" y="20" width="1560" height="940" rx="24" style="fill:var(--c-base);stroke:var(--c-surface-border)" stroke-width="2" filter="url(#softShadow)" />

  <!-- Title bar -->
  <rect x="20" y="20" width="1560" height="72" rx="24" style="fill:var(--c-surface)" />
  <circle cx="56" cy="56" r="7" fill="#f87171" opacity="0.85" />
  <circle cx="80" cy="56" r="7" fill="#fbbf24" opacity="0.85" />
  <circle cx="104" cy="56" r="7" fill="#52C972" opacity="0.85" />
  <rect x="328" y="42" width="760" height="28" rx="14" style="fill:var(--c-surface-raised);stroke:var(--c-surface-border)" />
  <text x="352" y="60" class="txt muted mono tiny">chrome://newtab · WebRoutines</text>

  <!-- Main area + sidebar frame -->
  <rect x="44" y="104" width="980" height="832" rx="16" style="fill:var(--c-base);stroke:var(--c-surface-border)" />
  <rect x="1040" y="104" width="516" height="832" rx="16" style="fill:var(--c-surface);stroke:var(--c-surface-border)" />

  <!-- Tab bar background -->
  <rect x="44" y="104" width="980" height="44" rx="14" style="fill:var(--c-surface);stroke:var(--c-surface-border)" />

  <!-- ══════════ STAGE 1: Empty Runner Home ══════════ -->

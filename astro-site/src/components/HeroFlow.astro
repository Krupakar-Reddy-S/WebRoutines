    <rect x="1068" y="390" width="460" height="324" rx="10" class="card" />
    <text x="1090" y="414" class="txt small">Focused Runner</text>
    <text x="1090" y="436" class="txt tiny">Morning Ops (1/3)</text>
    <text x="1090" y="454" class="txt muted tiny">Current: dashboard.example.com</text>

    <rect x="1090" y="470" width="100" height="30" rx="8" class="chip" /><text x="1120" y="489" class="txt tiny">Previous</text>
    <rect x="1202" y="470" width="100" height="30" rx="8" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" /><text x="1236" y="489" class="txt tiny accent">Next</text>
    <rect x="1314" y="470" width="108" height="30" rx="8" class="chip" /><text x="1336" y="489" class="txt tiny">Open current</text>
    <rect x="1434" y="470" width="72" height="30" rx="8" style="fill:var(--c-surface-raised);stroke:var(--c-fg-faint)" /><text x="1457" y="489" class="txt tiny faint">Stop</text>

    <rect x="1090" y="510" width="416" height="30" rx="8" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" />
    <text x="1235" y="529" class="txt tiny accent">Enter focus mode</text>

    <rect x="1090" y="554" width="416" height="36" rx="8" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" /><text x="1104" y="576" class="txt tiny">● 1. dashboard.example.com</text>
    <rect x="1090" y="596" width="416" height="36" rx="8" class="chip" /><text x="1104" y="618" class="txt tiny muted">○ 2. alerts.example.com</text>
    <rect x="1090" y="638" width="416" height="36" rx="8" class="chip" /><text x="1104" y="660" class="txt tiny muted">○ 3. ci.example.com</text>
  </g>

  <!-- ══════════ STAGE 3b: Step 2 — Alerts ══════════ -->
  <g class="stage stage3b">
    <rect x="60" y="114" width="200" height="24" rx="9" style="fill:var(--c-surface-raised);stroke:var(--c-surface-border)" />
    <text x="78" y="130" class="txt tiny">Morning Ops · dashboard</text>
    <rect x="268" y="114" width="188" height="24" rx="9" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" />
    <text x="286" y="130" class="txt tiny">Morning Ops · alerts</text>
    <rect x="464" y="114" width="160" height="24" rx="9" style="fill:var(--c-surface-raised);stroke:var(--c-surface-border)" />
    <text x="482" y="130" class="txt tiny">Morning Ops · ci</text>

    <rect x="84" y="162" width="900" height="736" rx="12" style="fill:var(--c-base);stroke:var(--c-surface-border)" />
    <text x="124" y="206" class="txt title">Step 2/3: Alerts</text>
    <rect x="124" y="228" width="820" height="58" rx="10" style="fill:var(--c-surface-raised);stroke:var(--c-fg-faint)" />
    <text x="150" y="264" class="txt small">1 alert needs action</text>

    <rect x="124" y="304" width="820" height="94" rx="10" class="card" />
    <text x="150" y="336" class="txt small">API Latency Spike</text>
    <text x="150" y="360" class="txt muted tiny">Region: us-east · Duration: 4m</text>

    <!-- Sidebar -->
    <rect x="1068" y="132" width="460" height="54" rx="10" class="card" />
    <text x="1090" y="156" class="txt title">Runner Home</text>
    <text x="1090" y="176" class="txt muted tiny">Focus on active routine progress.</text>

    <rect x="1068" y="204" width="460" height="172" rx="10" class="card" />
    <text x="1090" y="228" class="txt small">Active Runners</text>
    <rect x="1090" y="246" width="416" height="110" rx="10" style="fill:var(--c-surface);stroke:var(--c-surface-border)" />
    <text x="1110" y="270" class="txt small">Morning Ops</text>
    <text x="1110" y="289" class="txt muted tiny">Tab group runner · Loading: lazy</text>
    <text x="1110" y="307" class="txt muted tiny">Step 2/3 (67%)</text>
    <rect x="1110" y="322" width="372" height="8" rx="4" style="fill:var(--c-surface-border)" />
    <rect x="1110" y="322" width="248" height="8" rx="4" style="fill:var(--c-accent)" />

    <rect x="1068" y="390" width="460" height="324" rx="10" class="card" />
    <text x="1090" y="414" class="txt small">Focused Runner</text>
    <text x="1090" y="436" class="txt tiny">Morning Ops (2/3)</text>
    <text x="1090" y="454" class="txt muted tiny">Current: alerts.example.com</text>

    <rect x="1090" y="470" width="100" height="30" rx="8" class="chip" /><text x="1120" y="489" class="txt tiny">Previous</text>
    <rect x="1202" y="470" width="100" height="30" rx="8" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" /><text x="1236" y="489" class="txt tiny accent">Next</text>
    <rect x="1314" y="470" width="108" height="30" rx="8" class="chip" /><text x="1336" y="489" class="txt tiny">Open current</text>
    <rect x="1434" y="470" width="72" height="30" rx="8" style="fill:var(--c-surface-raised);stroke:var(--c-fg-faint)" /><text x="1457" y="489" class="txt tiny faint">Stop</text>

    <rect x="1090" y="510" width="416" height="30" rx="8" style="fill:var(--c-accent-glow);stroke:var(--c-accent)" />
